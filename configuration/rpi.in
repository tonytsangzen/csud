LIB_ARM_V6 ?= 1
LIB_BCM2835 ?= 1
LIB_DWC ?= 1
ifeq ("$(TARGET)", "RPI1")
	 CFLAGS += -DTARGET_RPI1 
	 CFLAGS += -Wa,-march=armv6
	 CFLAGS += -Wa,-mcpu=arm1176jzf-s
else ifeq ("$(TARGET)", "RPI2")
	 CFLAGS += -DTARGET_RPI2 
	 CFLAGS += -DLIB_BCM2835
	 CFLAGS += -DLIB_DWC
	 CFLAGS += -Wa,-march=armv7
	 CFLAGS += -Wa,-mcpu=cortex-a7
endif
